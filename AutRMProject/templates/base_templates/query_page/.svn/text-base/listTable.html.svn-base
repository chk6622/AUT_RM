{% extends 'base_template/query_page/listTableBase.html' %}

{%block script%}
$(function(){
	queryUrl='{%block query_url%}{%endblock%}'
	$('#to_next_page_image').click(function(){  //下一页
		window.location=queryUrl+'/?pageSize={{pageSize}}&pageNum={{nextPageNum}}'
	}).hover(function(){
				$(this).addClass('mouseHover')
			},function(){
				$(this).removeClass('mouseHover')
			});
	$('#to_prev_page_image').click(function(){  //上一页
		window.location=queryUrl+'/?pageSize={{pageSize}}&pageNum={{prevPageNum}}'
	}).hover(function(){
				$(this).addClass('mouseHover')
			},function(){
				$(this).removeClass('mouseHover')
			});
	$('#to_first_page_image').click(function(){  //第一页
		window.location=queryUrl+'/?pageSize={{pageSize}}&pageNum=1'
	}).hover(function(){
				$(this).addClass('mouseHover')
			},function(){
				$(this).removeClass('mouseHover')
			});
	$('#to_last_page_image').click(function(){  //最后一页
		window.location=queryUrl+'/?pageSize={{pageSize}}&pageNum={{maxPageNum}}'
	}).hover(function(){
				$(this).addClass('mouseHover')
			},function(){
				$(this).removeClass('mouseHover')
			});
	$('#skip_url_image').click(function(){  //跳到第x页
		pageNum=$('#skip_url_textfield').val()
		window.location=queryUrl+'/?pageSize={{pageSize}}&pageNum='+pageNum
	}).hover(function(){
				$(this).addClass('mouseHover')
			},function(){
				$(this).removeClass('mouseHover')
			});
});
function locationUrl(msg,url)  //跳转到特定url
{
	if(msg!=null)
	{
		if(confirm(msg))
		{
			window.location=url;
		}
	}
	else
	{
		window.location=url;
	}
	
}
{%endblock%}

